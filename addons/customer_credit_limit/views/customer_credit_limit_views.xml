<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_credit_limit_list" model="ir.ui.view">
        <field name="name">customer.credit.limit.list</field>
        <field name="model">customer.credit.limit</field>
        <field name="arch" type="xml">
            <list> <field name="partner_id"/>
                <field name="credit_limit"/>
                <field name="total_due"/>
                <field name="remaining_credit"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_customer_credit_limit_form" model="ir.ui.view">
        <field name="name">customer.credit.limit.form</field>
        <field name="model">customer.credit.limit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="credit_limit"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="total_due" readonly="1"/>
                        <field name="remaining_credit" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_credit_limit" model="ir.actions.act_window">
        <field name="name">Customer Credit Limits</field>
        <field name="res_model">customer.credit.limit</field>
        <field name="view_mode">list,form</field> </record>

    <menuitem id="menu_credit_control_root" name="Credit Control" sequence="10"/>
    <menuitem id="menu_customer_credit_limit_main" 
              name="Customer Credit Limits" 
              parent="menu_credit_control_root" 
              action="action_customer_credit_limit"/>
</odoo>